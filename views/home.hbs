<h1>Home</h1>
{{# each products }}
  <div class="row">
{{# each this }}  
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="{{ this.image }}" alt="...">
      <div class="caption">
        <h3>{{ this.title }}</h3>
        <p>{{ this.description }}</p>
        <p><a href="#" class="btn btn-primary" role="button">Buy</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{/each}}